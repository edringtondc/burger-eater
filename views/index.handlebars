        </button> --}}

                <button type="button" class="btn btn-danger change-devoured delete" data-id="{{id}}">Delete</button>

      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="card add-burger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="newburger">Add a Burger:</label>
        <input type="text" id="newburger" name="burger_name">
      </div>

