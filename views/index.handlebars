<div class="container">
  <div class="card burger-menu">
    <h2>Burger Menu</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}

        <button  type="button" class="btn btn-warning change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
          {{#if devoured}}undevour!{{else}}DEVOUR!{{/if}}
        </button>

        <button type="button" class="btn btn-danger change-devoured delete" data-id="{{id}}">Delete</button>
      </li>

      {{/unless}}
      {{/each}}
    </ul>

    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}

        {{!-- <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
